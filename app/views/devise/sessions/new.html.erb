<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <table>
    <tr><td><%= f.label :email %></td><td><%= f.email_field :email %></td></tr>
    <tr><td><%= f.label :password %></td><td><%= f.password_field :password %></td></tr>
    <% if devise_mapping.rememberable? -%>
      <tr><td></td><td><%= f.check_box :remember_me %> <%= f.label :remember_me %></td></tr>
    <% end -%>
    <tr><td></td><td><%= f.submit "Sign in" %><br /><br /><%= render :partial => "devise/shared/links" %></td></tr>
  </table>

<% end %>

